<main class="c-base-layout__main">
  <div class="o-wrapper">
    <h1><%= t('.heading') %></h1>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="c-input u-1/2@m u-1/3@l u-mb-small">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="u-mt u-mb">
        <%= f.button class: 'o-btn c-btn c-btn--primary' do %>
          <span class="fa fa-paper-plane"></span>
          <%= t('.send_instructions') %>
        <% end %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</main>
